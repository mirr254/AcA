<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="68dp" >

<android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" android:layout_alignParentBottom="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="71dp">

        <ImageView
                android:id="@+id/iv_image"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/abc_btn_radio_material">
        </ImageView>

        <TextView
                android:id="@+id/menu_title"
                android:text="Title"
                android:textStyle="bold"
                android:layout_toRightOf ="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >
        </TextView>

        <TextView
                android:id="@+id/menu_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_below="@+id/menu_title"
                android:layout_toRightOf="@+id/iv_image"
                android:layout_toEndOf="@+id/iv_image">
        </TextView>

    </RelativeLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>